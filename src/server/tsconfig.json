{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "target": "ES2022",
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["../*"],
      "@/server/*": ["./*"],
      "@/shared/*": ["../shared/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist"]
}